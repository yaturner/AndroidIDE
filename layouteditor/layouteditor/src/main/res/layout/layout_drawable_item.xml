<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="70dp"
  android:background="?attr/selectableItemBackground"
  android:layout_marginTop="5dp"
  android:layout_marginBottom="5dp">

  <ImageView
    android:layout_width="70dp"
    android:layout_height="match_parent"
    android:src="@drawable/transparent_background"
    android:id="@+id/background"
    android:layout_margin="4dp" />

  <ImageView
    android:layout_width="70dp"
    android:layout_height="match_parent"
    android:src="@drawable/image_broken"
    android:scaleType="centerCrop"
    android:id="@+id/drawable"
    android:layout_margin="4dp" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ic_launcher"
    android:layout_marginTop="12dp"
    android:textSize="20sp"
    android:textColor="?attr/colorPrimary"
    android:layout_marginLeft="10dp"
    android:id="@+id/drawable_name"
    android:layout_toRightOf="@id/drawable" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:orientation="horizontal"
    android:background="?attr/colorAccent"
    android:layout_marginLeft="10dp"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@id/drawable"
    android:id="@+id/line"
    android:layout_marginBottom="8dp" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Drawable"
    android:layout_toRightOf="@id/drawable"
    android:layout_above="@id/line"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    android:textSize="14sp"
    android:textColor="?attr/colorOnSurfaceVariant"
    android:id="@+id/image_type" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1 version"
    android:layout_toRightOf="@id/image_type"
    android:layout_above="@id/line"
    android:layout_marginBottom="5dp"
    android:textSize="14sp"
    android:textColor="?attr/colorOnSurfaceVariant"
    android:layout_marginLeft="20dp"
    android:id="@+id/versions" />

  <ImageView
    style="@style/ToolbarButtonStyle"
    android:src="@drawable/dots_vertical"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_margin="10dp"
    android:id="@+id/menu"
    android:translationY="-4dp"
    app:tint="?attr/colorTertiary" />

</RelativeLayout>
